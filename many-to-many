$groups = ($user && ($user instanceof User))
    ? $user->groups()->with(['plans' => function ($query) {
        $query->where('active', true);
    }])->get()->filter(function (Group $group) {
        return $group->show;
    })->values()
    : [];

Hoặc
// Kiểm tra nếu không có "plans" hoặc "groups"
