    foreach ($groups as $group) {
        if ($group->plans->isEmpty()) {
            // Xử lý khi không có "plans" liên kết với "group"
        } else {
            // Xử lý khi có "plans" liên kết với "group"
            foreach ($group->plans as $plan) {
                // Thực hiện các thao tác với "plan"
            }
        }
    }
}
